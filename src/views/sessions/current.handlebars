<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid px-4">
    <a class="navbar-brand btn btn-secondary rounded-pill fw-bold text-white" href="/products">Products</a>
  </div>
</nav>
<div class="container min-vh-100">
  <div class="row">
    <div class="col-md-4 offset-md-4 py-5 my-5">
      <h1 class="text-center p-3 fw-bold">User Profile</h1>
      <div class="card shadow">
        <div class="px-4 py-2">
          <h2 class="text-center">{{user.full_name}}</h2>
          <hr>
        </div>
        <div class="card-body px-4">
          <p class="fs-5"><strong>UserID: </strong>{{user.id}}</p>
          <p class="fs-5"><strong>Email: </strong>{{user.email}}</p>
          <p class="fs-5"><strong>Role: </strong>{{user.role}}</p>
          <hr>
          {{#if isUser}}
          <button class="btn btn-warning fw-bold p-2 my-1 d-block mx-auto" onclick="changeRole(`{{user.id}}`)">Switch to
            premium</button>
          {{/if}}
          {{#if isPremium}}
          <button class="btn btn-secondary fw-bold p-2 my-1 d-block mx-auto" onclick="changeRole(`{{user.id}}`)">Switch
            to user</button>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const changeRole = async (id) => {
    try {
      const res = await fetch(`/api/users/premium/${id}`, {
        method: "POST",
      });

      const message = (message, color) => {
        return Toastify({
          text: `${message}`,
          duration: 2000,
          newWindow: true,
          close: true,
          gravity: "top",
          position: "right",
          stopOnFocus: true,
          style: {
            background: `${color}`,
          },
          onClick: function () { },
        }).showToast();
      }

      if (res.ok) {
        message("User role updated successfully", "#008000");
        const logoutResponse = await fetch('/api/jwt/logout');
        if (logoutResponse.ok) {
          setTimeout(async () => {
            window.location.href = "/api/jwt/login";
          }, 2000);
        } else {
          message("Logout failed.", "#ff0000");
        }
      } else {
        message("Error updating user role", "#ff0000");
      }

    } catch (error) {
      console.error(error);
    }
  }
</script>